#include<stdio.h>
int main()
{
   // This variable is to store the input number 
   int num;
 
   printf("Enter an integer: ");
   scanf("%d",&num);
 
   // Modulus (%) returns remainder
   if ( num%2 == 0 )
      printf("%d is an even number", num);
   else if ( num==0 )
      printf("zero is neither even nor odd);
   else
      printf("%d is an odd number", num);
 
   return 0;
}
